  "resolution_strategies": {
    "identity_first": {
      "description": "Prioritize occupation/role identifiers over contextual terms",
      "weight_multiplier": 1.75,
      "implementation": "Apply higher weight to terms that represent professional identity"
    },
    "domain_consistency": {
      "description": "Maintain consistent domain assignment across related entity records",
      "confidence_threshold": 0.75,
      "implementation": "Track entity classifications and enforce consistency across occurrences"
    },
    "role_specificity": {
      "description": "Prioritize specific library catalog roles",
      "role_multiplier": 1.5,
      "implementation": "Apply higher weights to catalog-specific roles like 'printer', 'publisher', 'book designer'"
    },
    "disambiguate_entities": {
      "description": "Handle different individuals with same name by contextual markers",
      "context_window_size": 5,
      "similarity_threshold": 0.85,
      "implementation": "Use birth-death dates and associated works to distinguish entities"
    },
    "cross_domain_resolution": {
      "description": "Resolve entities with activities spanning multiple domains",
      "primary_domain_threshold": 0.8,
      "secondary_domain_ratio": 0.7,
      "implementation": "Assign primary and secondary domains for cross-discipline entities"
    },
    "historical_entity_contextualization": {
      "description": "Adapt classification based on historical period",
      "historical_weight_factor": 1.2,
      "implementation": "Apply specialized weight factors to entities with birth-death dates"
    }
  },
